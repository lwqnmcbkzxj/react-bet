<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_activity_navigation"
    app:startDestination="@id/loginFragment2">
    <fragment
        android:id="@+id/loginFragment2"
        android:name="com.bettinghub.forecasts.ui.LoginFragment"
        android:label="fragment_login2"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/toForgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/toRegistrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/toMainActivity"
            app:destination="@id/mainActivity"
            app:launchSingleTop="true" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.bettinghub.forecasts.ui.forgotPassword.ForgotPasswordFragment"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" />
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.bettinghub.forecasts.ui.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/toMainActivity"
            app:destination="@id/mainActivity" />
    </fragment>
    <action android:id="@+id/action_global_loginFragment2" app:destination="@id/loginFragment2" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.bettinghub.forecasts.ui.MainActivity"
        android:label="MainActivity" />
</navigation>
