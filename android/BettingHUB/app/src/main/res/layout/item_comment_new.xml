<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/newCommentButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/sideMargin"
        android:layout_marginEnd="@dimen/sideMargin"
        android:background="@drawable/bg_cornered_frame"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/newComment"
        android:textAllCaps="false"
        android:textColor="#202E48"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/commentLayout"
        android:visibility="gone"
        android:background="@drawable/bg_cornered_frame_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sideMargin"
        android:layout_marginEnd="@dimen/sideMargin"
        android:orientation="vertical">

        <EditText
            android:id="@+id/commentEditText"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/labelSpace"
            android:fontFamily="@font/roboto_regular"
            android:gravity="top|start"
            android:hint="Написать комментарий"
            android:inputType="text"
            android:minHeight="130dp"
            android:padding="8dp"
            android:textColor="@color/textColor1"
            android:textColorHint="@color/textColor13"
            android:textSize="14sp" />

        <Button
            android:id="@+id/addCommentBtn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_button"
            android:fontFamily="@font/roboto_medium"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Написать"
            android:textAllCaps="false"
            android:textColor="#202E48"
            android:textSize="18sp" />

    </LinearLayout>


</FrameLayout>


