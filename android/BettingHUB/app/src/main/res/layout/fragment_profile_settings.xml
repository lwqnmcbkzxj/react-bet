<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="fragment"
            type="com.xbethub.webview.ui.profileSettings.ProfileSettingsFragment" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/topPanel"
                layout="@layout/element_top_panel"/>

        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:background="@android:color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/titleBlock"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    app:elevation="1dp"
                    android:translationZ="2dp"
                    android:background="@android:color/white"
                    app:layout_constraintTop_toBottomOf="@id/topPanel">

                    <ImageButton
                        android:id="@+id/backBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_arrow_left"
                        android:paddingStart="@dimen/sideMargin"
                        android:paddingEnd="@dimen/sideMargin"
                        android:background="@android:color/transparent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:onClick="@{v -> fragment.onBackBtnClick()}"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="17sp"
                        android:textColor="@color/textColor1"
                        android:gravity="center"
                        android:text="@string/profile_title"
                        app:layout_constraintStart_toEndOf="@id/backBtn"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="@dimen/sideMargin"
                    />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="@dimen/sideMargin"
                    />


                <FrameLayout
                    android:id="@+id/userBlockLayout"
                    android:layout_width="0dp"
                    android:layout_height="77dp"
                    android:background="@drawable/bg_top_cornered_frame_7dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/titleBlock"
                    app:layout_constraintStart_toStartOf="@id/start"
                    app:layout_constraintEnd_toEndOf="@id/end">

                    <include
                        android:id="@id/userBlock"
                        layout="@layout/element_user_block"
                        />

                </FrameLayout>

                <Button
                    android:id="@+id/rateAppBtn"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16sp"
                    android:textColor="#202E48"
                    android:textAllCaps="false"
                    android:text="@string/rateApp"
                    android:background="@drawable/bg_cornered_frame"
                    app:layout_constraintStart_toStartOf="@id/start"
                    app:layout_constraintEnd_toEndOf="@id/end"
                    app:layout_constraintTop_toBottomOf="@id/userBlockLayout"
                    android:onClick="@{v -> fragment.onRateAppBtnClick()}"
                    />

                <LinearLayout
                    android:id="@+id/languageBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_language_block"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@id/rateAppBtn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >

                    <Button
                        android:id="@+id/russianBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_regular"
                        android:minWidth="0dp"
                        android:textSize="16sp"
                        android:textColor="#5E687B"
                        android:textAllCaps="false"
                        android:text="@string/russian"
                        android:background="@android:color/transparent"
                        android:paddingStart="25dp"
                        android:paddingEnd="12dp"
                        android:onClick="@{v -> fragment.onRussianBtnClick()}"
                        />

                    <Button
                        android:id="@+id/englishBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/roboto_regular"
                        android:minWidth="0dp"
                        android:textSize="16sp"
                        android:textColor="#5E687B"
                        android:textAllCaps="false"
                        android:text="@string/english"
                        android:background="@android:color/transparent"
                        android:paddingEnd="25dp"
                        android:paddingStart="22dp"
                        android:onClick="@{v -> fragment.onEnglishBtnClick()}"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/personalDataBlock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toBottomOf="@id/languageBlock"
                    app:layout_constraintStart_toStartOf="@id/start"
                    app:layout_constraintEnd_toEndOf="@id/end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="18sp"
                        android:textColor="@color/textColor1"
                        android:text="@string/personalDataBlockTitle"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="15sp"
                        android:textColor="#A8ABAF"
                        android:text="@string/emailField"
                        android:layout_marginTop="10dp"
                        />

                    <EditText
                        android:id="@+id/login_field"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_cornered_frame_5dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="19sp"
                        android:text="vsproweb@gmail.com"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/email_label" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linkedAccountsBlock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@id/personalDataBlock"
                    app:layout_constraintStart_toStartOf="@id/start"
                    app:layout_constraintEnd_toEndOf="@id/end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="18sp"
                        android:textColor="@color/textColor1"
                        android:text="@string/linkedAccountBlockTitle"
                        />

                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:flexWrap="wrap"
                        app:alignItems="flex_end"
                        app:showDividerHorizontal="middle"
                        app:showDividerVertical="middle"
                        app:dividerDrawableVertical="@drawable/flex_divider"
                        app:dividerDrawableHorizontal="@drawable/flex_divider">

                        <include
                            layout="@layout/element_account"
                            app:icon="@{@drawable/ic_google_logo}"
                            app:title="@{@string/google}"/>
                        <include
                            layout="@layout/element_account"
                            app:icon="@{@drawable/ic_fb_logo}"
                            app:title="@{@string/facebook}"/>
                        <include
                            layout="@layout/element_account"
                            app:icon="@{@drawable/ic_vk_logo}"
                            app:title="@{@string/vk}"/>


                    </com.google.android.flexbox.FlexboxLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/changePasswordBlock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="@id/start"
                    app:layout_constraintEnd_toEndOf="@id/end"
                    app:layout_constraintTop_toBottomOf="@id/linkedAccountsBlock">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="18sp"
                        android:textColor="@color/textColor1"
                        android:text="@string/changePasswordBlockTitle"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="15sp"
                        android:textColor="#A8ABAF"
                        android:text="@string/newPassword"
                        android:layout_marginTop="10dp"
                        />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="19sp"
                        android:textColor="@color/textColor1"
                        android:text="123456"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:inputType="textPassword"
                        android:background="@drawable/bg_cornered_frame_5dp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="15sp"
                        android:textColor="#A8ABAF"
                        android:text="@string/repeat_password_label"
                        android:layout_marginTop="10dp"
                        />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/repeatPassword"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="19sp"
                        android:textColor="@color/textColor1"
                        android:text="123456"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:inputType="textPassword"
                        android:background="@drawable/bg_cornered_frame_5dp"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>

                <Button
                    android:id="@+id/saveChangesBtn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textColor="#202E48"
                    android:textAllCaps="false"
                    android:text="@string/saveChanges"
                    android:background="@drawable/bg_save_changes"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/changePasswordBlock"
                    app:layout_constraintStart_toStartOf="@id/start"
                    app:layout_constraintEnd_toEndOf="@id/end"
                    android:onClick="@{v -> fragment.onSaveChangesBtnClick()}"
                    />

                <LinearLayout
                    android:id="@+id/notificationBlock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="40dp"
                    app:layout_constraintStart_toStartOf="@id/start"
                    app:layout_constraintEnd_toEndOf="@id/end"
                    app:layout_constraintTop_toBottomOf="@id/saveChangesBtn">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="18sp"
                        android:textColor="@color/textColor1"
                        android:text="@string/setupNotificationsBlockTitle"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="16sp"
                            android:textColor="@color/textColor1"
                            android:text="@string/emailNotifications"
                            android:layout_centerVertical="true"
                            />

                        <Switch
                            android:id="@+id/emailNotificationsSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:thumb="@drawable/switch_thumb"
                            android:switchMinWidth="39dp"
                            android:checked="true"
                            android:track="@drawable/switch_track"
                            app:elevation="1dp"
                            android:translationZ="2dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="16sp"
                            android:textColor="@color/textColor1"
                            android:text="@string/pushNotifications"
                            android:layout_centerVertical="true"
                            />

                        <Switch
                            android:id="@+id/pushNotificationsSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:thumb="@drawable/switch_thumb"
                            android:switchMinWidth="39dp"
                            android:checked="true"
                            app:elevation="1dp"
                            android:translationZ="2dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:track="@drawable/switch_track"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="16sp"
                            android:textColor="@color/textColor1"
                            android:text="@string/commentReplyNotifications"
                            android:layout_centerVertical="true"
                            />

                        <Switch
                            android:id="@+id/commentReplyNotificationsSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:thumb="@drawable/switch_thumb"
                            android:switchMinWidth="39dp"
                            android:checked="true"
                            app:elevation="1dp"
                            android:translationZ="2dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:track="@drawable/switch_track"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/signOutBtn"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textColor="#AA0F0F"
                    android:text="@string/signOut"
                    android:layout_marginTop="40dp"
                    app:layout_constraintStart_toStartOf="@id/start"
                    app:layout_constraintEnd_toEndOf="@id/end"
                    app:layout_constraintTop_toBottomOf="@id/notificationBlock"
                    android:background="@drawable/bg_cornered_frame_5dp"
                    android:onClick="@{v -> fragment.onSignOutBtnClick()}"
                    />

                <include
                    layout="@layout/item_footer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="@dimen/footerBottomMargin"
                    app:layout_constraintStart_toStartOf="@id/start"
                    app:layout_constraintEnd_toEndOf="@id/end"
                    app:layout_constraintTop_toBottomOf="@id/signOutBtn"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</layout>
