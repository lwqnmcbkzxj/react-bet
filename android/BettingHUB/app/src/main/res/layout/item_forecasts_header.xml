<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.xbethub.webview.enums.ForecastType"/>

        <variable
            name="viewModel"
            type="com.xbethub.webview.ui.forecasts.ForecastsViewModel" />

        <variable
            name="viewHolder"
            type="com.xbethub.webview.ui.forecasts.items.viewHolders.HeaderViewHolder" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <include
            android:id="@+id/topPanel"
            layout="@layout/element_top_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            style="@style/TittleStyle"
            android:id="@+id/title"
            android:text="@string/forecasts"
            android:layout_marginStart="@dimen/sideMargin"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topPanel"/>

        <ImageButton
            android:id="@+id/extraFiltersBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_settings"
            android:background="@android:color/transparent"
            android:padding="@dimen/sideMargin"
            app:layout_constraintTop_toTopOf="@id/title"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="@{v -> viewHolder.onExtraFiltersBtnClick()}"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/filter"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="@dimen/sideMargin"
            android:layout_marginEnd="@dimen/sideMargin"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:background="@drawable/bg_filter">

            <Button
                android:id="@+id/subscriptionsBtn"
                style="@style/FilterStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/subscriptions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/allForecastsBtn"
                android:onClick="@{v -> viewModel.onForecastTypeBtnClick(ForecastType.SUBSCRIPTION)}"
                />

            <Button
                android:id="@+id/allForecastsBtn"
                style="@style/FilterStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:onClick="@{v -> viewModel.onForecastTypeBtnClick(ForecastType.ALL)}"
                android:text="@string/allForecasts"
                app:layout_constraintEnd_toStartOf="@id/paidBtn"
                app:layout_constraintStart_toEndOf="@id/subscriptionsBtn"
                />

            <Button
                android:id="@+id/paidBtn"
                style="@style/FilterStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/paid"
                app:layout_constraintStart_toEndOf="@id/allForecastsBtn"
                app:layout_constraintEnd_toEndOf="parent"
                android:onClick="@{v -> viewModel.onForecastTypeBtnClick(ForecastType.PAID)}"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/extraFilterFields"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/sideMargin"
            android:layout_marginEnd="@dimen/sideMargin"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@id/filter"
            >

            <TextView
                android:id="@+id/nearestField"
                style="@style/FilterStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nearestField"
                android:fontFamily="@font/roboto_medium"
                android:textColor="#202E48"
                app:layout_constraintTop_toTopOf="@id/timeIntervalSpinnerLayout"
                app:layout_constraintBottom_toBottomOf="@id/timeIntervalSpinnerLayout"
                app:layout_constraintStart_toStartOf="parent"
                />

            <RelativeLayout
                android:id="@+id/timeIntervalSpinnerLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_filter"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/nearestField">

                <Spinner
                    android:id="@+id/timeIntervalSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sportRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                app:layout_constraintTop_toBottomOf="@id/nearestField"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
