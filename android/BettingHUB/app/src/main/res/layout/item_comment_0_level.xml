<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/commentSideSpace"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/commentSideSpace"
            />

        <LinearLayout
            android:id="@+id/userInfoBlock"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/start"
            app:layout_constraintEnd_toEndOf="@id/end"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="22dp"
                android:layout_height="22dp"
                app:cardCornerRadius="4dp">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_test_avatar"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_regular"
                android:textSize="15sp"
                android:textColor="@color/textColor1"
                android:gravity="center_vertical"
                android:text="Никнейм"
                android:layout_marginStart="8dp"
                />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:textColor="#5E687B"
                android:alpha="0.7"
                android:gravity="center_vertical"
                android:text="вчера в 16:58"
                android:layout_marginStart="16dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="15sp"
            android:textColor="#131313"
            android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum."
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/userInfoBlock"
            app:layout_constraintStart_toStartOf="@id/start"
            app:layout_constraintEnd_toEndOf="@id/end"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/statsBlock"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@id/start"
            app:layout_constraintEnd_toEndOf="@id/end"
            app:layout_constraintTop_toBottomOf="@id/text">

            <Button
                android:id="@+id/replyBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_regular"
                android:textSize="14sp"
                android:textColor="#5E687B"
                android:textAllCaps="false"
                android:text="@string/reply"
                android:gravity="center_vertical"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:background="@android:color/transparent"
                android:paddingEnd="10dp"
                app:layout_constraintStart_toStartOf="parent"
                />

            <LinearLayout
                android:id="@+id/ratingBlock"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageButton
                    android:id="@+id/downVoteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_arrow_down"
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    />

                <TextView
                    android:id="@+id/rating"
                    style="@style/ForecastStatsStyle"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#0F971D"
                    android:text="23"
                    />

                <ImageButton
                    android:id="@+id/upVoteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_arrow_up"
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp"
                    android:paddingEnd="@dimen/forecastSideMargin"
                    />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/commentLayout"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/statsBlock"
            android:background="@drawable/bg_cornered_frame_5dp"
            android:layout_width="0dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/commentSideSpace"
            android:layout_marginEnd="@dimen/commentSideSpace"
            android:orientation="vertical">

            <EditText
                android:id="@+id/commentEditText"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/labelSpace"
                android:fontFamily="@font/roboto_regular"
                android:gravity="top|start"
                android:hint="Написать комментарий"
                android:inputType="text"
                android:minHeight="130dp"
                android:padding="8dp"
                android:textColor="@color/textColor1"
                android:textColorHint="@color/textColor13"
                android:textSize="14sp" />

            <Button
                android:id="@+id/addCommentBtn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_button"
                android:fontFamily="@font/roboto_medium"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Написать"
                android:textAllCaps="false"
                android:textColor="#202E48"
                android:textSize="18sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
