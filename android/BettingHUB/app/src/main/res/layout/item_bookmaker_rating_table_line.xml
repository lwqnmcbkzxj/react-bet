<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="64dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/column1Begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="8dp"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/column2Begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="104dp"
                />


            <!--#####################################################-->

            <androidx.cardview.widget.CardView
                android:id="@+id/bookmakerLogoCV"
                android:layout_width="96dp"
                android:layout_height="45dp"
                app:cardCornerRadius="7dp"
                app:layout_constraintStart_toStartOf="@id/bookmakerColumn"
                app:layout_constraintEnd_toEndOf="@id/bookmakerColumn"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <ImageView
                    android:id="@+id/bookmakerLogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_test_kontora_logo"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="15sp"
                android:textColor="@color/textColor1"
                android:text="9.4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/ratingColumn"
                app:layout_constraintEnd_toEndOf="@id/ratingColumn"
                />

            <TextView
                android:id="@+id/bonus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="15sp"
                android:textColor="@color/textColor10"
                android:text="2500 â‚½"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/bonusColumn"
                app:layout_constraintEnd_toEndOf="@id/bonusColumn"
                />

            <TextView
                android:id="@+id/overviewLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="13sp"
                android:textColor="@color/textColor1"
                android:textAllCaps="true"
                android:text="@string/overview"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/overviewColumn"
                app:layout_constraintEnd_toStartOf="@id/externaLinkIcon"
                />

            <ImageView
                android:id="@+id/externaLinkIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_external_link"
                app:layout_constraintStart_toEndOf="@id/overviewLabel"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/overviewLabel"
                app:layout_constraintBottom_toBottomOf="@id/overviewLabel"
                />

            <!--#####################################################-->

            <View
                android:id="@+id/bookmakerColumn"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                style="@style/TableHeaderStyle"
                android:text="@string/bookmakerColumn"
                app:layout_constraintStart_toStartOf="@id/column1Begin"
                app:layout_constraintEnd_toEndOf="@id/column2Begin"
                />

            <View
                android:id="@+id/ratingColumn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="@id/column2Begin"
                app:layout_constraintEnd_toStartOf="@id/bonusColumn"
                />

            <View
                android:id="@+id/bonusColumn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/ratingColumn"
                app:layout_constraintEnd_toStartOf="@id/overviewColumn"
                />

            <View
                android:id="@+id/overviewColumn"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                app:layout_constraintStart_toEndOf="@id/bonusColumn"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/borders"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/leftBorder"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="#E5E2E2"
                    />

                <View
                    android:id="@+id/rightBorder"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="#E5E2E2"
                    />

                <View
                    android:id="@+id/bottomBorder"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="#E5E2E2"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <include
            android:visibility="gone"
            android:id="@+id/loading"
            layout="@layout/item_bookmaker_rating_table_line_loading"
            />

    </FrameLayout>



</layout>
