<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/sideMargin"
        android:paddingEnd="@dimen/sideMargin"
        android:background="@android:color/white">

        <TextView
            style="@style/TittleStyle"
            android:id="@+id/title"
            android:gravity="center_horizontal"
            android:text="Букмекерская контора\n1X Ставка"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:clipToPadding="false"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/bookmakerLogoCV"
                    android:layout_width="96dp"
                    android:layout_height="45dp"
                    app:cardCornerRadius="7dp"
                    app:layout_constraintStart_toStartOf="@id/bookmakerColumn"
                    app:layout_constraintEnd_toEndOf="@id/bookmakerColumn"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >

                    <ImageView
                        android:id="@+id/bookmakerLogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_test_kontora_logo"
                        />

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="0dp" />

                <Button
                    android:textColor="@color/textColor8"
                    android:fontFamily="@font/roboto_medium"
                    android:text="@string/site"
                    android:paddingStart="8dp"
                    android:drawableStart="@drawable/ic_check_without_circle"
                    android:background="@drawable/bg_cornered_frame_7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp" />

                <ImageButton
                    android:id="@+id/downVoteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_arrow_down"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    />

                <TextView
                    android:id="@+id/rating"
                    style="@style/ForecastStatsStyle"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#0F971D"
                    android:text="23"
                    />

                <ImageButton
                    android:id="@+id/upVoteBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_arrow_up"
                    android:background="?attr/selectableItemBackground"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/infoBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="14dp">

            <!--Турнир-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/forecastFieldHeight">

                <TextView
                    style="@style/ForecastFieldStyle"
                    android:layout_height="match_parent"
                    android:text="@string/factor"
                    />

                <TextView
                    android:id="@+id/factor"
                    style="@style/ForecastFieldStyle"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_medium"
                    android:text="8.35/10"
                    android:textColor="@color/textColor1"
                    android:layout_alignParentEnd="true"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/dotted_line_horizontal"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>

            <!--Дата и время-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/forecastFieldHeight">

                <TextView
                    style="@style/ForecastFieldStyle"
                    android:layout_height="match_parent"
                    android:text="@string/line"
                    />

                <TextView
                    android:id="@+id/line"
                    style="@style/ForecastFieldStyle"
                    android:layout_height="match_parent"
                    android:textColor="@color/textColor1"
                    android:fontFamily="@font/roboto_medium"
                    android:text="8.35/10"
                    android:layout_alignParentEnd="true"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/dotted_line_horizontal"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>

            <!--Прогноз-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/forecastFieldHeight">

                <TextView
                    style="@style/ForecastFieldStyle"
                    android:layout_height="match_parent"
                    android:text="@string/reliability"
                    />

                <TextView
                    android:id="@+id/reliability"
                    style="@style/ForecastFieldStyle"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/roboto_medium"
                    android:text="8.35/10"
                    android:textColor="@color/textColor1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/dotted_line_horizontal"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>

            <!--Коэффициент-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/forecastFieldHeight">

                <TextView
                    style="@style/ForecastFieldStyle"
                    android:layout_height="match_parent"
                    android:text="@string/pay_methods"
                    />

                <TextView
                    android:id="@+id/pay_methods"
                    style="@style/ForecastFieldStyle"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/roboto_medium"
                    android:text="8.35/10"
                    android:textColor="@color/textColor1" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/dotted_line_horizontal"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>

            <!--Ставка-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/forecastFieldHeight">

                <TextView
                    style="@style/ForecastFieldStyle"
                    android:layout_height="match_parent"
                    android:text="@string/bonus"
                    />

                <TextView
                    android:id="@+id/bet"
                    style="@style/ForecastFieldStyle"
                    android:layout_height="match_parent"
                    android:textColor="#0F971D"
                    android:fontFamily="@font/roboto_medium"
                    android:text="1 700 ₽"
                    android:layout_alignParentEnd="true"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@drawable/dotted_line_horizontal"
                    android:layout_alignParentBottom="true"
                    />

            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:textSize="17sp"
            android:textColor="#131313"
            android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam."
            android:layout_marginTop="17dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            />

        <TextView
            android:id="@+id/commentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textSize="18sp"
            android:textColor="@color/textColor1"
            android:text="16 комментариев"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toBottomOf="@id/statsBlock"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/statsBlock"
            />

    </LinearLayout>

</layout>
