<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/userBlock"
            layout="@layout/element_user_block_loading"
            />

        <LinearLayout
            android:id="@+id/roiBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/userBlock">

            <TextView
                android:id="@+id/roi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="15sp"
                android:textColor="@android:color/transparent"
                android:background="@color/loadingColor"
                android:text="+128.5%"
                android:layout_marginStart="8dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="15sp"
                android:textColor="@android:color/transparent"
                android:background="@color/loadingColor"
                android:text="@string/roi"
                android:layout_marginStart="8dp"
                />

        </LinearLayout>

        <FrameLayout
            android:visibility="gone"
            android:id="@+id/subscribe_btn_block"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            app:layout_constraintTop_toBottomOf="@id/roiBlock"
            android:layout_marginTop="13dp"
            android:clipToPadding="false"
            android:clipChildren="false">

            <Button
                android:id="@+id/subscribeBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:text="@string/subscribe"
                android:textColor="@color/textColor1"
                android:background="@android:color/white"
                app:elevation="1dp"
                />

            <Button
                android:visibility="gone"
                android:id="@+id/unsubscribeBtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:text="@string/unsubscribe"
                android:textColor="@color/textColor1"
                android:background="@android:color/white"
                />

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/statsBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/subscribe_btn_block"
            android:background="@drawable/bg_frame"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/column1Center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1666"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/column2Center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/column3Center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.8333"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/column1Center"
                app:layout_constraintEnd_toEndOf="@id/column1Center"
                android:background="@color/loadingColor">

                <include
                    android:id="@+id/subs"
                    layout="@layout/element_stat"
                    app:title="@{@string/subsStat}"
                    app:value="@{@string/defaultValue}"
                    app:valueColor="@{@color/textColor3}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="invisible"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/column2Center"
                app:layout_constraintEnd_toEndOf="@id/column2Center"
                android:background="@color/loadingColor">

                <include
                    android:id="@+id/position"
                    layout="@layout/element_stat"
                    app:title="@{@string/positionStat}"
                    app:value="@{@string/defaultValue}"
                    app:valueColor="@{@color/textColor2}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="invisible"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/column3Center"
                app:layout_constraintEnd_toEndOf="@id/column3Center"
                android:background="@color/loadingColor">

                <include
                    android:id="@+id/netProfit"
                    layout="@layout/element_stat"
                    app:title="@{@string/netProfitStat}"
                    app:value="@{@string/defaultValue}"
                    app:valueColor="@{@color/textColor2}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="invisible"
                    />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
