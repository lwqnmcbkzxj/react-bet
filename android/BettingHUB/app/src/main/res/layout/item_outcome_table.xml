<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/titleBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:id="@+id/titleValueBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16sp"
                    android:textColor="@color/textColor1"
                    android:text="Название"
                    />

                <TextView
                    android:id="@+id/value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16sp"
                    android:textColor="@color/textColor1"
                    android:text="(0)"
                    android:layout_marginStart="2dp"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/collapseLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="16sp"
                android:text="@string/collapse"
                android:textColor="@color/textColor5"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="@id/titleValueBlock"
                app:layout_constraintBottom_toBottomOf="@id/titleValueBlock"
                app:layout_constraintStart_toEndOf="@id/titleValueBlock"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/tableCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            android:layout_marginTop="15dp"
            app:layout_goneMarginTop="0dp"
            app:layout_constraintTop_toBottomOf="@id/titleBlock">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tableRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </androidx.cardview.widget.CardView>


        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/tableCV"
            app:layout_constraintBottom_toBottomOf="@id/tableCV"
            app:layout_constraintStart_toStartOf="@id/tableCV"
            app:layout_constraintEnd_toEndOf="@id/tableCV"
            android:background="@drawable/bg_cornered_frame_transparent_5dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
