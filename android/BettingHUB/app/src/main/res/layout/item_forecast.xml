<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_corned_frame">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerBlock"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/categoryIcon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_test_category_icon"
                android:layout_marginStart="@dimen/forecastSideMargin"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/categoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="11sp"
                android:textColor="#232324"
                android:text="Киберспорт."
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/categoryIcon"
                />

            <TextView
                android:id="@+id/eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="11sp"
                android:textColor="#A8ABAF"
                android:lines="1"
                android:ellipsize="end"
                android:text="Dota 2. StayHome Challenge (матчи из 3-х карт)"
                android:layout_marginStart="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/categoryName"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/frameColor"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/forecastInfoBlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/headerBlock">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="@dimen/forecastSideMargin"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="@dimen/forecastSideMargin"
                />

            <TextView
                android:id="@+id/rivals"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:lines="1"
                android:ellipsize="end"
                android:text="FlyToMoon - Team Unique"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintEnd_toEndOf="@id/end"
                />

            <LinearLayout
                android:id="@+id/fieldsBlock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/rivals"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintEnd_toEndOf="@id/end">

                <include
                    android:id="@+id/forecast"
                    layout="@layout/element_forecast_field"
                    app:fieldName="@{@string/forecastField}"
                    />

                <include
                    android:id="@+id/coefficient"
                    layout="@layout/element_forecast_field"
                    app:fieldName="@{@string/coefficientField}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/forecastFieldSpace"
                    />

                <include
                    android:id="@+id/betAmount"
                    layout="@layout/element_forecast_field"
                    app:fieldName="@{@string/betAmountField}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/forecastFieldSpace"
                    />

                <include
                    android:id="@+id/gameStart"
                    layout="@layout/element_forecast_field"
                    app:fieldName="@{@string/gameStartField}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/forecastFieldSpace"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Bibendum est ultricies integer quis. Iaculis urna id volutpat lacus laoreet. Mauris vitae ultricies leo integer malesuada. Ac odio "
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/fieldsBlock"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintEnd_toEndOf="@id/end"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/description"
                app:layout_constraintStart_toStartOf="@id/start"
                app:layout_constraintEnd_toEndOf="@id/end">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/img_test_avatar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="14sp"
                    android:textColor="#343638"
                    android:gravity="center"
                    android:text="Username"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/avatar"
                    />

                <View
                    android:id="@+id/border1"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="#A8ABAF"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/userName"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:id="@+id/winLossBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/border1">

                    <ImageView
                        android:id="@+id/win1"
                        style="@style/WinLossCircleStyle"
                        android:src="@drawable/ic_check"
                        />

                    <ImageView
                        android:id="@+id/win2"
                        style="@style/WinLossCircleStyle"
                        android:src="@drawable/ic_check"
                        android:layout_marginStart="3dp"
                        />

                    <ImageView
                        android:id="@+id/win3"
                        style="@style/WinLossCircleStyle"
                        android:src="@drawable/ic_close"
                        android:layout_marginStart="3dp"
                        />

                    <ImageView
                        android:id="@+id/win4"
                        style="@style/WinLossCircleStyle"
                        android:src="@drawable/ic_check"
                        android:layout_marginStart="3dp"
                        />

                    <ImageView
                        android:id="@+id/win5"
                        style="@style/WinLossCircleStyle"
                        android:src="@drawable/ic_close"
                        android:layout_marginStart="3dp"
                        />

                </LinearLayout>

                <View
                    android:id="@+id/border2"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="#A8ABAF"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/winLossBlock"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
