<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="googleBtnClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="fbBtnClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="vkBtnClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="googleText"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:includeFontPadding="false"
            android:textSize="16sp"
            android:textColor="@color/textColor7"
            android:text="@string/or_label"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/color8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/or"
            app:layout_constraintTop_toTopOf="@id/or"
            app:layout_constraintBottom_toBottomOf="@id/or"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/color8"
            app:layout_constraintStart_toEndOf="@id/or"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/or"
            app:layout_constraintBottom_toBottomOf="@id/or"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/or"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:background="@drawable/bg_corned_frame_6dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/facebookBtn"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{googleBtnClickListener}">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:srcCompat="@drawable/ic_google_logo"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="16sp"
                    android:textColor="@color/textColor1"
                    android:lines="1"
                    android:text="@{googleText}"
                    android:layout_marginStart="10dp"
                    app:autoSizeMaxTextSize="16sp"
                    app:autoSizeTextType="uniform"
                    />


            </LinearLayout>

            <ImageButton
                android:id="@+id/facebookBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="1"
                app:srcCompat="@drawable/ic_fb_logo"
                android:background="@drawable/bg_corned_frame_6dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@id/vkBtn"
                android:onClick="@{fbBtnClickListener}"
                />

            <ImageButton
                android:id="@+id/vkBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintDimensionRatio="1"
                app:srcCompat="@drawable/ic_vk_logo"
                android:background="@drawable/bg_corned_frame_6dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:onClick="@{vkBtnClickListener}"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/or">
            <!--        todo замени херню снизу на нормальную кнопу-->
            <Button
                android:id="@+id/imageButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                android:text="Google"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textAlignment="center"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:drawableLeft="@drawable/ic_google"
                android:background="@drawable/bg_button_google"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/fb_login_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/fb_login_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_fb"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toStartOf="@+id/vk_login_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/vk_login_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_vk"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
