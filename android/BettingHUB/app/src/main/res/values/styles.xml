<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/main_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="statusBarBackground">@color/main_blue</item>

    </style>
    <style name="LoginActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="statusBarBackground">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
    </style>
    <!-- Кастомная AppTheme.Launcher. Устанавливает в качестве фона вашу drawable -->
    <style name="AppTheme.Launcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>

        <!-- для Android 5+ вы можете поменять цвет colorPrimaryDark, чтобы соответствовать цвету windowBackground -->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <style name="LoginTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textColor1</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColor6</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:shadowColor">@android:color/transparent</item>
    </style>

    <style name="LoginLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColor7</item>
    </style>

    <style name="LoginFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:background">@drawable/bg_cornered_frame_5dp</item>
    </style>

    <style name="LoginOrangeBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor9</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FilterStyle">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#5E687B</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ForecastFieldStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColor1</item>
    </style>

    <style name="WinLossCircleStyle">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="ForecastStatsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#202E48</item>
    </style>

    <style name="TittleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TableHeaderStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/textColor1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MenuStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColor1</item>
    </style>

    <style name="ProfileTabStyle" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColor1</item>
    </style>

    <style name="ProfileTabTextAppearance">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColor1</item>
    </style>
</resources>
